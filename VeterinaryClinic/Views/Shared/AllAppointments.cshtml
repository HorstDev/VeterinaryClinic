@using VeterinaryClinic.Data.Entities
@model Appointment

<a class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true" asp-controller="Service" asp-action="AboutAppointment" asp-route-id="@Model.Id">
    <img src="~/img/cat.svg" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
    <div class="d-flex gap-2 w-100 justify-content-between">
      <div>
        <h6 class="mb-0">@Model.TypeOfService</h6>
        <p class="mb-0 opacity-75">Вид животного - @Model.TypeOfAnimal</p>
      </div>
      <small class="opacity-50 text-nowrap">@Model.DateTimeStart.ToString()</small>
    </div>
</a>
