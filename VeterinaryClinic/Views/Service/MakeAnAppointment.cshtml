@using System.Security.Claims
@using VeterinaryClinic.ViewModels.Service
@model AppointmentModel

@{
    ViewData["Title"] = "MakeAnAppointment";
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.104.2">
    <title>Checkout example · Bootstrap v5.2</title>

   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    
    <!-- Custom styles for this template -->
    <link href="~/css/form-validation.css" rel="stylesheet">
  </head>
  <body class="bg-light">
    
<div class="container">
  <main>
     <div class="container">
      <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
       <img class ="logo" src="~/img/cat.svg">
      </a>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><a href="#" class="nav-link px-2 link-secondary">Когти и Клыки</a></li>
        <li><a class="nav-link px-2 link-dark" asp-controller="Service" asp-action="MakeAnAppointment">Запись на прием</a></li>
        <li><a class="nav-link px-2 link-dark" asp-controller="Home" asp-action="Contacts">Контакты</a></li>
      </ul>

      @if(!User.Identity!.IsAuthenticated) {
           <div class="col-md-3 text-end">
                <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">Войти</a>
                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Регистрация</a>
           </div>
      }
      else {
          <div class="col-md-3 text-end">
              @if(User.FindFirst(x => x.Type == ClaimsIdentity.DefaultRoleClaimType)!.Value == "Admin")
              {
                  <a class="btn bg-success md-5" asp-controller="Modification" asp-action="Modifications">Админ</a>
              }
              else
              {
                  <a class="btn bg-success md-5">Мои питомцы</a>
              }
              <a class="btn bg-danger md-5" asp-controller="Account" asp-action="Logout">Выйти</a>
          </div>
      }
      
    </header>
	</div>
	
    <div class="page-header">
        <h1>Запись на прием</h1>
    </div>
  

    <div class="row g-5">
      <div class="col-md-7 col-lg-8">
        <form class="needs-validation" asp-action="MakeAnAppointment" asp-controller="Service">
        <div asp-validation-summary="All" style="font-size:23px; font-family:Impact" class="text-danger"></div>
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="firstName" class="form-label">Фамилия</label>
              <input type="text" asp-for="Surname" class="form-control" id="firstName" placeholder="Фамилия" value="">
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-sm-6">
              <label for="lastName" class="form-label">Имя</label>
              <input type="text" asp-for="Name" class="form-control" id="lastName" placeholder="Имя" value="">
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-12">
              <label for="username" class="form-label">Вид питомца</label>
               <select class="form-select" id="pets" asp-for="TypeOfAnimal"required>
                <option value="">Выберите</option>
                <option>Кот</option>
                <option>Собака</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid country.
              </div>
            </div>

            <div class="col-12">
              <label for="email" class="form-label">Email</label>
              <input type="email" asp-for="Email" class="form-control" id="email" placeholder="you@mail.ru">
              <div class="invalid-feedback">
                Please enter a valid email address for shipping updates.
              </div>
            </div>

            <div class="col-12">
              <label for="address" class="form-label">Вид услугу</label>
              <select class="form-select" id="ysluga" asp-for="TypeOfService" required>
                <option value="">Выберите</option>
                <option>Вакцинация</option>
                <option>Консультация (стандартная)</option>
                <option>Консультация с хирургом</option>
                <option>Консультаци на дому</option>                
                <option>Груминг</option>
            </select>
              <div class="invalid-feedback">
                Please select a valid country.
              </div>
            </div>

            <div class="col-12">
             <label for="Data" class="form-label">Дата и время</label>
              <input type="datetime-local" asp-for="DateTime" class="form-control" id="data" placeholder="Имя" value="" required>
              <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

            <div class="col-12">
             <label for="about" class="form-label">Примечание</label>
             <input type="text" asp-for="Note" class="form-control">
             <div class="invalid-feedback">
                Valid last name is required.
              </div>
            </div>

        

          <button class="w-100 btn btn-primary btn-lg" type="submit">Записаться</button>
          </div>
        </form>
      </div>
    </div>
  </main>

  <footer class="my-5 pt-5 text-muted text-center text-small">
    <p class="mb-1">&copy; 2017–2022 Company Name</p>
    <ul class="list-inline">
      <li class="list-inline-item"><a href="#">Privacy</a></li>
      <li class="list-inline-item"><a href="#">Terms</a></li>
      <li class="list-inline-item"><a href="#">Support</a></li>
    </ul>
  </footer>
</div>


    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>

      <script src="form-validation.js"></script>
  </body>
</html>

